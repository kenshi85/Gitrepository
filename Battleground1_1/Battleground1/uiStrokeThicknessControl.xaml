<UserControl x:Class="Battleground.uiStrokeThicknessControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="82" d:DesignWidth="149" BorderThickness="2" BorderBrush="#5A000000">
    <Grid Height="80" Width="147">
        <Slider Height="34" Margin="12,46,15,0" x:Name="uiStrokeThicknessSlider"  VerticalAlignment="Top" Minimum="1" Maximum="20" ValueChanged="uiStrokeThicknessSlider_ValueChanged" />
        <Label Content="Stroke Thickness" Height="28" Margin="12,15,49,0" Name="label1" VerticalAlignment="Top" FontSize="10" />
        <TextBox Height="23" Margin="0,17,21,0" x:Name="uiStrokeThicknessTextBox"  VerticalAlignment="Top" TextChanged="uiStrokeThicknessTextBox_TextChanged" HorizontalAlignment="Right" Width="31" />
    </Grid>
</UserControl>
